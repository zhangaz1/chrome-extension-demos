{
    "manifest_version": 2,

    "name": "tabs manager",
    "version": "0.1",
    "description": "support tabs manager: getTabId/closeTab/activeTab ...",

    "permissions": [
        "tabs"
    ],

    "background": {
        "scripts": [
            "libs/lodash.js",
            "libs/ramda.js",
            "libs/jquery.js",
            "libs/handlebars.js",

            "background/background.js"
        ]
    },

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "libs/lodash.js",
            "libs/ramda.js",
            "libs/jquery.js",
            "libs/handlebars.js",

            "content_scripts/page.js"
        ]
    }],

    "browser_action": {
        "default_title": "tabs managed",
        "default_icon": "icons/icon.png",
        "default_popup": "popup/popup.html"
    }

}